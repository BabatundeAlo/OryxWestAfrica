@model OryxWestAfrica.Models.Picture

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Picture</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PictureID" />
            <div class="form-group">

                @{ var base64 = Convert.ToBase64String(Model.Image);
                    var imagesrc = string.Format("data:image/gif;base64,{0}", base64);
                }
                <img src="@imagesrc" style="max-width:100px; max-height:100px" />
            </div>
                <div class="form-group">
                    <label asp-for="PictureName" class="control-label"></label>
                    <input asp-for="PictureName" class="form-control" />
                    <span asp-validation-for="PictureName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image" class="control-label"></label>
                    <input type="file" id="files" asp-for="Image" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Differentiator" class="control-label"></label>
                    <input asp-for="Differentiator" class="form-control" />
                    <span asp-validation-for="Differentiator" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Chcker" class="control-label"></label>
                    <input asp-for="Chcker" type="checkbox" class="form-control" />
                    <span asp-validation-for="Chcker" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

