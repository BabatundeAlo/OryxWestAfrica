@model IEnumerable<OryxWestAfrica.Models.Gallery>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GalleryName)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Image)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Differentiator)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GalleryName)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Differentiator)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GalleryID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.GalleryID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.GalleryID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
